---
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";
import blog from "./../blogs/blogs.json";
---

<div class="flex flex-col px-5">
    <div class="p-5 flex items-center justify-center">
        <h1 class="text-4xl font-black">Blogs</h1>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 gap-4 pb-5">
        {
            blog.map((item, index) => {
                return (
                    <div
                        key={index}
                        class="border-1 border-[#21212153] p-4 rounded-2xl shadow-2xl"
                    >
                        <div class="mx-3">
                            <img
                                class="flex flex-col items-center h-[300px] w-[600px] rounded-t-xl"
                                src={item.image}
                                alt={item.slug}
                                decoding="async"
                                loading="eager"
                                fetchpriority="high"
                            />
                            <h1 class="text-lg sm:text-xl font-bold">{item.title}</h1>
                            <p>{item.description}</p>
                            <div class="flex flex-col sm:flex-row">
                                <span class="font-bold flex-1">
                                    Date: {item.date}
                                </span>
                                <span class="font-bold flex-1">
                                    Author: {item.author}
                                </span>
                            </div>
                        </div>
                        <div class="grid grid-cols-2 gap-2 my-2">
                            {item.tags.map((tags, index) => {
                                return (
                                    <div
                                        key={index}
                                        class="flex items-center justify-center border-1 border-[#21212153] p-1 rounded-full"
                                    >
                                        <h1 class="text-center font-black text-[#212121c7]">
                                            {tags}
                                        </h1>
                                    </div>
                                );
                            })}
                        </div>
                    </div>
                );
            })
        }
    </div>
</div>
